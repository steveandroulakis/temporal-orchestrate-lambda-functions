{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceRoot": "src",
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true
	}
}